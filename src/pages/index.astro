    }
  }

  @media (max-width: 968px) {
    .hero-content {
      grid-template-columns: 1fr 600px;
      gap: 40px;
      padding: 120px 20px 40px;
      text-align: center;
      max-width: 600px;
    }

    .hero-form {
      max-width: 600px;
      margin: 0 auto;
    }

    .hero-text h1 {
      font-size: 2.8rem;
    }

    .why-us-content {
      grid-template-columns: 1fr;
      gap: 40px;
    }
  }

  @media (max-width: 768px) {
    .hero-text h1 {
      font-size: 2.4rem;
    }

    .hero-form {
      padding: 30px 25px;
      margin: 0 15px;
    }

    .hero-content {
      padding: 100px 15px 40px;
    }

    .contact-info {
      flex-direction: column;
      gap: 20px;
    }

    /* En m√≥viles, pausar video para ahorrar datos */
    .hero-video video {
      display: none;
    }
    
    .hero-overlay {
      background: linear-gradient(135deg, rgba(0,0,0,0.60) 0%, rgba(44, 90, 160, 0.60) 100%);
    }
  }

  @media (max-width: 480px) {
    .hero-text h1 {
      font-size: 2rem;
      line-height: 1.2;
    }

    .hero-form {
      padding: 25px 20px;
    }

    .contact-form .form-input,
    .contact-form .form-textarea {
      padding: 15px 18px;
    }
  }
</style>