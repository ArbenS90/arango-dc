<header class="header">
  <nav class="nav">
    <div class="nav-container">
      <!-- Logo -->
      <div class="logo">
        <a href="/">
          <img src="/images/logos/logo.png" 
              alt="Arango Dental Clinic" 
              width="200" 
              height="55">
        </a>
      </div>

      <!-- Menú de navegación -->
      <ul class="nav-menu" id="nav-menu">
        <li><a href="/" class="nav-link">Inicio</a></li>
        <li><a href="/servicios" class="nav-link">Servicios</a></li>
        <li><a href="/doctores" class="nav-link">Nuestro Equipo</a></li>
        <li><a href="/contacto" class="nav-link">Contacto</a></li>
        <li><a href="/citas" class="nav-link cta-btn">Agendar Cita</a></li>
      </ul>

      <!-- Botón de menú móvil -->
      <div class="hamburger" id="hamburger">
        <span class="bar"></span>
        <span class="bar"></span>
        <span class="bar"></span>
      </div>
    </div>
  </nav>
</header>

<style>
  .header {
    background: transparent;
    backdrop-filter: none;
    box-shadow: none;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    transition: all 0.3s ease;
  }

  .header.scrolled {
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    box-shadow: 0 2px 20px rgba(0,0,0,0.1);
    position: fixed;
  }

  .nav-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 40px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 85px;
  }

  .logo a {
    display: flex;
    align-items: center;
    text-decoration: none;
    color: #2c5aa0;
  }

  .logo img {
    max-width: 250px;
    height: auto;
    transition: all 0.3s ease;
    display: block;
    filter: brightness(0) invert(1); /* Logo blanco cuando header es transparente */
  }

  .header.scrolled .logo img {
    filter: none; /* Logo normal cuando header tiene fondo */
  }

  .nav-menu {
    display: flex;
    list-style: none;
    margin: 0;
    padding: 0;
    gap: 35px;
    align-items: center;
  }

  .nav-link {
    text-decoration: none;
    color: rgba(255, 255, 255, 0.9);
    font-weight: 500;
    font-size: 1rem;
    transition: all 0.3s ease;
    padding: 10px 15px;
    border-radius: 5px;
    text-shadow: 0 1px 2px rgba(0,0,0,0.3);
  }

  .header.scrolled .nav-link {
    color: #333;
    text-shadow: none;
  }

  .nav-link:hover {
    color: #ff9500;
    transform: translateY(-1px);
  }

  .header.scrolled .nav-link:hover {
    color: #2c5aa0;
  }

  .cta-btn {
    background: rgba(255, 165, 0, 0.9) !important;
    color: white !important;
    border-radius: 25px;
    padding: 12px 20px !important;
    transition: all 0.3s ease;
    border: 2px solid rgba(255, 165, 0, 0.9);
    text-shadow: none !important;
    font-weight: 600;
    box-shadow: 0 2px 10px rgba(255, 165, 0, 0.3);
  }

  .header.scrolled .cta-btn {
    background: #2c5aa0 !important;
    border-color: #2c5aa0;
    box-shadow: 0 2px 10px rgba(44, 90, 160, 0.3);
  }

  .cta-btn:hover {
    background: rgba(255, 165, 0, 1) !important;
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(255, 165, 0, 0.4);
    color: white !important;
  }

  .header.scrolled .cta-btn:hover {
    background: #1e3f73 !important;
    border-color: #1e3f73;
    box-shadow: 0 4px 15px rgba(44, 90, 160, 0.4);
  }

  .hamburger {
    display: none;
    flex-direction: column;
    cursor: pointer;
    padding: 5px;
  }

  .bar {
    width: 25px;
    height: 3px;
    background: rgba(255, 255, 255, 0.9);
    margin: 3px 0;
    transition: 0.3s;
    border-radius: 2px;
  }

  .header.scrolled .bar {
    background: #333;
  }

  /* Responsive */
  @media (max-width: 1200px) {
    .nav-container {
      padding: 0 30px;
    }
    
    .nav-menu {
      gap: 25px;
    }
  }

  @media (max-width: 968px) {
    .nav-container {
      padding: 0 20px;
      
    }
    
    .logo img {
      max-width: 200px;
    }
    
    .nav-menu {
      gap: 10px;
    }
  }

  @media (max-width: 844px) {
    .nav-container {
      height: 85px;
    }
    
    .logo img {
      max-width: 18
      0px;
    }
    
    .nav-menu {
      position: fixed;
      left: -100%;
      top: 85px;
      flex-direction: column;
      background: rgba(25, 25, 25, 0.9);

      width: 100%;
      text-align: center;
      transition: 0.3s;
      box-shadow: 0 10px 27px rgba(0,0,0,0.3);
      padding: 30px 0;
      gap: 15px;
    }

    .header.scrolled .nav-menu {
      background: rgba(255, 255, 255, 0.98);
    }

    .nav-menu.active {
      left: 0;
    }

    .nav-menu .nav-link {
      color: rgba(255, 255, 255, 0.9);
      font-size: 1.1rem;
      padding: 15px 20px;
    }

    .header.scrolled .nav-menu .nav-link {
      color: #333;
    }

    .hamburger {
      display: flex;
    }

    .hamburger.active .bar:nth-child(2) {
      opacity: 0;
    }

    .hamburger.active .bar:nth-child(1) {
      transform: translateY(8px) rotate(45deg);
    }

    .hamburger.active .bar:nth-child(3) {
      transform: translateY(-8px) rotate(-45deg);
    }
  }

  @media (max-width: 768px) {
    .nav-container {
      height: 75px;
    }
    
    .logo img {
      max-width: 160px;
    }
    
    .nav-menu {
      position: fixed;
      left: -100%;
      top: 75px;
      flex-direction: column;
      background: rgba(25, 25, 25, 0.9);

      width: 100%;
      text-align: center;
      transition: 0.3s;
      box-shadow: 0 10px 27px rgba(0,0,0,0.3);
      padding: 30px 0;
      gap: 15px;
    }

    .header.scrolled .nav-menu {
      background: rgba(255, 255, 255, 0.98);
    }

    .nav-menu.active {
      left: 0;
    }

    .nav-menu .nav-link {
      color: rgba(255, 255, 255, 0.9);
      font-size: 1.1rem;
      padding: 15px 20px;
    }

    .header.scrolled .nav-menu .nav-link {
      color: #333;
    }

    .hamburger {
      display: flex;
    }

    .hamburger.active .bar:nth-child(2) {
      opacity: 0;
    }

    .hamburger.active .bar:nth-child(1) {
      transform: translateY(8px) rotate(45deg);
    }

    .hamburger.active .bar:nth-child(3) {
      transform: translateY(-8px) rotate(-45deg);
    }
  }

  @media (max-width: 480px) {
    .nav-container {
      padding: 0 15px;
    }
    
    .logo img {
      max-width: 140px;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const hamburger = document.getElementById('hamburger');
    const navMenu = document.getElementById('nav-menu');
    const header = document.querySelector('.header');

    // Header que cambia al hacer scroll
    function updateHeader() {
      const scrollPosition = window.scrollY;
      
      if (scrollPosition > 50) {
        header?.classList.add('scrolled');
      } else {
        header?.classList.remove('scrolled');
      }
    }

    // Ejecutar al cargar y al hacer scroll
    updateHeader();
    window.addEventListener('scroll', updateHeader);

    // Menú móvil
    hamburger?.addEventListener('click', () => {
      hamburger.classList.toggle('active');
      navMenu?.classList.toggle('active');
    });

    // Cerrar menú al hacer click en un link
    document.querySelectorAll('.nav-link').forEach(n => n.addEventListener('click', () => {
      hamburger?.classList.remove('active');
      navMenu?.classList.remove('active');
    }));

    // Cerrar menú al hacer click fuera
    document.addEventListener('click', (e) => {
      if (!hamburger?.contains(e.target) && !navMenu?.contains(e.target)) {
        hamburger?.classList.remove('active');
        navMenu?.classList.remove('active');
      }
    });
  });
</script>